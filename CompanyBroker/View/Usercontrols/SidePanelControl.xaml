<UserControl x:Class="CompanyBroker.View.Usercontrols.SidePanelControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:userControls="clr-namespace:CompanyBroker.View.Usercontrols.SidePanelControls"
             mc:Ignorable="d" 
             DataContext="{Binding Sidepanel,Source={StaticResource Locator}}"
             d:DesignHeight="500" d:DesignWidth="400">
    <Grid>
        <!-- Grid definitions -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <!-- Grid content -->
        <TabControl>
            <!--  panel 1-->
            <TabItem Header="Filter panel 1">
                <!-- Reference to SidePanelControls for SidePanelTab1-->
                <userControls:SidePanelTab1></userControls:SidePanelTab1>
            </TabItem>
            <!--  panel 2-->
            <TabItem Header="Add listing">
                <!-- Reference to SidePanelControls for SidePanelTab2-->

            </TabItem>
        </TabControl>

    </Grid>
</UserControl>
